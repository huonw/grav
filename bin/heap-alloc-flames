#!/bin/bash

set -e -u -o pipefail

PID=""
while getopts ":p:d:" opt; do
    case ${opt} in
        p ) 
            PID=$OPTARG
            ;;
        d )
            DURATION=$OPTARG
    esac
done

SCRIPT_DIR=$(dirname "$0")

if [[ "$PID" == "" ]]; then
  echo "Usage: <script> -p PID [other args]"
  exit 1
fi

PERF_FLAME_OUTPUT="allocation-flamegraph-$PID.svg"
# add some extra time so that perf is recording for the entire
# duration that we're profiling the heap, to ensure the map contains
# all JIT'd functions that might appear.
export PERF_RECORD_SECONDS=$(( ${DURATION:0} + 2 ))

source $SCRIPT_DIR/validate-perf-map-agent.sh
source $SCRIPT_DIR/options-perf-thread-flames.sh

STACKS=$(mktemp)
COLLAPSED=$(mktemp)

echo "Generating stack trace symbols in background"
$PERF_MAP_AGENT_DIR/bin/perf-java-record-stack "$PID" &
sleep 1 # wait for perf to properly start

sudo python $GRAV_DIR/src/heap/heap_profile.py $@ > $STACKS
wait

cat $STACKS | sudo python  $GRAV_DIR/src/heap/stacks_tidy.py $PERF_MAP_FILE > $COLLAPSED
cat $COLLAPSED | $FLAMEGRAPH_DIR/flamegraph.pl --title "Heap Allocation Flame Graph" $PERF_FLAME_OPTS > $PERF_FLAME_OUTPUT && \
echo "Wrote $PERF_FLAME_OUTPUT"
